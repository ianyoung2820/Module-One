{
  "name": "folder-insight",
  "version": "1.0.0",
  "description": "A Node.js CLI that scans a directory and prints file statistics, extension breakdowns, and largest files (with optional tree view).",
  "type": "module",
  "bin": {
    "folder-insight": "./index.js"
  },
  "scripts": {
    "start": "node index.js --path . --top 10",
    "demo": "node index.js --path . --top 5 --tree --max-depth 2",
    "lint": "echo \"(Optional) Add ESLint here\""
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Ian Young",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "dayjs": "^1.11.11"
  }
}